<% if action == :edit %>
    <% action_url = band_url(band)%>
<% else %>
    <% action_url = bands_url %>
<% end %>

<form action="<%= action_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
    
    <% if action == :edit && band.persisted? %>
        <input type="hidden" name="_method" value="patch">
    <% end %>

    <label for="band_name">Band Name</label>
    <input id="band_name" type="text" name="band[name]" value="<%= band.name %>">

    <br>

    <input type="submit" value="<%= (action == :edit) ? 'Edit Band' : 'Add Band' %>" >

</form>